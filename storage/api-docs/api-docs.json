{
    "openapi": "3.0.0",
    "info": {
        "title": "Сервис Library",
        "description": "Сервис для проекта библиотеки СДУ",
        "contact": {
            "email": "asekenskigo@gmail.com"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "2.0"
    },
    "servers": [
        {
            "url": "/library"
        }
    ],
    "paths": {
        "/auth/login": {
            "post": {
                "tags": [
                    "auth"
                ],
                "summary": "Аутентификация пользователя",
                "description": "Аутентификация пользователя",
                "operationId": "login",
                "requestBody": {
                    "content": {
                        "application/x-www-form-urlencoded": {
                            "schema": {
                                "$ref": "#/components/schemas/LoginRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Authenticated"
                    },
                    "400": {
                        "description": "Что-то не так"
                    }
                }
            }
        },
        "/auth/logout": {
            "get": {
                "tags": [
                    "auth"
                ],
                "summary": "",
                "description": "Выход пользователя (Разлогиниться)",
                "operationId": "logout",
                "responses": {
                    "200": {
                        "description": "Logged out"
                    },
                    "400": {
                        "description": "Что-то не так"
                    }
                }
            }
        },
        "/auth/user": {
            "get": {
                "tags": [
                    "auth"
                ],
                "summary": "",
                "description": "Get user by token",
                "operationId": "user",
                "responses": {
                    "200": {
                        "description": "User"
                    },
                    "400": {
                        "description": "Что-то не так"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "LoginRequest": {
                "required": [
                    "username",
                    "password"
                ],
                "properties": {
                    "username": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                },
                "type": "object"
            }
        }
    },
    "security": [
        []
    ]
}